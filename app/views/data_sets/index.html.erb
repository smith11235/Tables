
<%= link_to "Only Head Revisions", data_sets_url(:filter => 'head'), :remote => true, :class => 'show_datasets' %><br />
<%= link_to "All Revisions", data_sets_url(), :remote => true, :class => 'show_datasets' %><br />
<script>
	$('.show_datasets').bind('ajax:success', function(event, xhr, status, data) {  
		var table = JSON.parse( data.responseText );
		setMainDisplay( table );
	} );
</script>
<div id="data_sets">
	<%= render 'data_sets/header' %>
	<%= render @data_sets %>
	<%= render 'data_sets/footer' %>
</div>

