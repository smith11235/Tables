<p id="notice"><%= notice %></p>
<%= link_to 'Back', data_sets_path %>
<br />

<div id="data_sets">
	<%= render 'data_sets/header' %>
	<%= render @data_set %>
	<%= render 'data_sets/footer' %>
</div>
<br />
<table id="data_set_records" class="display" >
	<thead>
		<tr>
			<% @data_set.fields.each do |field| %>
				<th><%= field.name %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @data_set.records.each do |record| %>
			<tr>
				<% @data_set.fields.each do |field| %>
					<td><%= record.get_cell( field ).string %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<br />
<h3>Revisions</h3>
<br />
<div id="revisions" >
<% @revisions.each do |revision| %>
	<% revision_title = "#{revision.created_at} - #{revision.created_at < @data_set.created_at ? 'Earlier' : 'Later'}" %> 
	<h3>Revision: <%= revision_title %></h3> 
	<div id="<%= revision.id %>" >
		<table id="revision_<%= revision.id %>" class="display" >
			<thead>
				<tr>
					<% revision.fields.each do |field| %>
						<th><%= field.name %></th>
					<% end %>
				</tr>
			</thead>
			<tbody>
				<% revision.records.each do |record| %>
					<tr>
						<% revision.fields.each do |field| %>
							<td><%= record.get_cell( field ).string %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
<% end %>
</div>
